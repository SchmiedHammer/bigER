{   
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Run bigER Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--disable-extensions",
                "${workspaceFolder}/examples",
                "--extensionDevelopmentPath=${workspaceFolder}/extension"
            ],
            "outFiles": [
                "${workspaceFolder}/extension/pack/*.js"
            ],
            "sourceMaps": true
        }
    ]
}